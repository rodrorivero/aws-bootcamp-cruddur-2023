#! /usr/bin/bash
BLUE='\033[0;34m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"
printf "${BLUE}== ${LABEL}${NO_COLOR}\n"

schema_path=$(realpath .)/db/schema.sql

if [ "$1" = "prod" ]; then
  echo "Running in production mode"
  URL=$PROD_CONNECTION_URL
else
  echo "Running in development mode"
  URL=$CONNECTION_URL
fi

psql $URL cruddur < $schema_path